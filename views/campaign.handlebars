<div class="container box has-text-centered">
    <p class="is-size-1">{{name}}</p>
    <p class="is-size-4">DM: {{user.username}}</p>
    <hr>
    <p class="is-size-4">Characters:</p>
    <hr>
    {{#each characters as |character|}}
    <a href="/profile/player/{{character.id}}">
        {{character.name}} the {{character.race}} {{character.charclass}}
    </a>
    <br>
    {{/each}}
    {{#unless is_dm}}

    <form>
        <button type="click" id="join-btn">Join With:</button>
        <select id="join-character">
            {{#each usercharacters as |usercharacter|}}
            <option value="{{usercharacter.id}}"> {{usercharacter.name}} the {{usercharacter.race}} {{usercharacter.charclass}}</option>
            {{/each}}
        </select>    
    </form>
    
    {{/unless}}

    <script src="/js/joincampaign.js"></script>
</div>