{{#if is_dm}}
{{#each user.campaigns as |campaign|}}
<div class="block">
  <div class="card">
    <header class="card-header">
      <p class="card-header-title">
        <a href="/profile/dm/{{campaign.id}}">
          {{campaign.name}}
        </a>
      </p>
      <button class="card-header-icon" aria-label="more options">
        <span class="icon">
          <i class="fas fa-angle-down" aria-hidden="true"></i>
        </span>
      </button>
    </header>
  </div>
</div>
{{/each}}
<button class="campaign-btn is-large">
  + New Campaign
</button>



{{else}}
{{#each user.characters as |character|}}
<div class="block">
  <div class="card">
    <header class="card-header">
      <p class="card-header-title">
        <a href="/profile/dm/{{campaign.id}}">
          <a href="/profile/player/{{character.id}}">
            {{character.name}} the {{character.race}} {{character.charclass}}
          </a>
        </a>
      </p>
      <button class="card-header-icon" aria-label="more options">
        <span class="icon">
          <i class="fas fa-angle-down" aria-hidden="true"></i>
        </span>
      </button>
    </header>
  </div>
</div>
{{/each}}
<button class="character-btn">
  + New Character
</button>
{{/if}}

<script src="/js/profile.js"></script>